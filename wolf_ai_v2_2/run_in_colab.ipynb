    "import os\n",
    "import shutil\n",
    "from google.colab import auth\n",
    "from googleapiclient.discovery import build\n",
    "from googleapiclient.http import MediaFileUpload # Not used for download, but good for uploads\n",
    "import io # For MediaIoReadable\n",
    "\n",
    "drive_service_colab = None\n",
    "try:\n",
    "    # Determine credentials type\n",
    "    sa_file = os.getenv('GOOGLE_APPLICATION_CREDENTIALS')\n",
    "    sa_json_content = os.getenv('GOOGLE_SERVICE_ACCOUNT_JSON_CONTENT')\n",
    "    if sa_file and os.path.exists(sa_file):\n",
    "        from google.oauth2.service_account import Credentials\n",
    "        creds = Credentials.from_service_account_file(sa_file, scopes=['https://www.googleapis.com/auth/drive'])\n",
    "        drive_service_colab = build('drive', 'v3', credentials=creds)\n",
    "        print(\"使用上傳的服務帳號檔案憑證進行 Google Drive 操作。\")\n",
    "    elif sa_json_content:\n",
    "        import json\n",
    "        from google.oauth2.service_account import Credentials\n",
    "        creds_info = json.loads(sa_json_content)\n",
    "        creds = Credentials.from_service_account_info(creds_info, scopes=['https://www.googleapis.com/auth/drive'])\n",
    "        drive_service_colab = build('drive', 'v3', credentials=creds)\n",
    "        print(\"使用 Colab Secret GOOGLE_SERVICE_ACCOUNT_JSON_CONTENT 的服務帳號憑證進行 Google Drive 操作。\")\n",
    "    else:\n",
    "        print(\"未檢測到服務帳號，嘗試 Colab 使用者授權以操作 Google Drive API...\")\n",
    "        auth.authenticate_user() # Triggers user authentication\n",
    "        drive_service_colab = build('drive', 'v3') # Uses authenticated user's credentials\n",
    "        print(\"Colab 使用者授權成功，可以使用 Drive API。\")\n",
    "except Exception as e:\n",
    "    print(f\"初始化 Drive API client 時發生錯誤: {e}\")\n",
    "    drive_service_colab = None\n",
    "\n",
    "DRIVE_BASE_DIR_NAME = \"wolf_AI_data\" \n",
    "DRIVE_INBOX_NAME = \"wolf_in\"\n",
    "DRIVE_PROCESSED_NAME = \"processed\"\n",
    "COLAB_LOCAL_DATA_PATH = os.path.join(FULL_PROJECT_PATH, 'data')\n",
    "os.makedirs(COLAB_LOCAL_DATA_PATH, exist_ok=True)\n",
    "\n",
    "def get_or_create_drive_folder(service, folder_name, parent_id=None):\n",
    "    query = f\"name='{folder_name}' and mimeType='application/vnd.google-apps.folder'\"\n",
    "    if parent_id:\n",
    "        query += f\" and '{parent_id}' in parents\"\n",
    "    else:\n",
    "        query += \" and 'root' in parents\"\n",
    "    query += \" and trashed=false\"\n",
    "    try:\n",
    "        response = service.files().list(q=query, spaces='drive', fields='files(id, name)').execute()\n",
    "        folders = response.get('files', [])\n",
    "        if folders:\n",
    "            print(f\"Drive 資料夾 '{folder_name}' 已存在，ID: {folders[0].get('id')}\")\n",
    "            return folders[0].get('id')\n",
    "        else:\n",
    "            print(f\"Drive 資料夾 '{folder_name}' 不存在，正在創建...")\n",
    "            file_metadata = {'name': folder_name, 'mimeType': 'application/vnd.google-apps.folder'}\n",
    "            if parent_id:\n",
    "                file_metadata['parents'] = [parent_id]\n",
    "            folder = service.files().create(body=file_metadata, fields='id').execute()\n",
    "            print(f\"Drive 資料夾 '{folder_name}' 創建成功，ID: {folder.get('id')}\")\n",
    "            return folder.get('id')\n",
    "    except Exception as error:\n",
    "        print(f\"操作 Drive 資料夾 '{folder_name}' 時發生錯誤: {error}\")\n",
    "        return None\n",
    "\n",
    "wolf_in_folder_id_val = None\n",
    "wolf_processed_folder_id_val = None\n",
    "\n",
    "if drive_service_colab:\n",
    "    drive_base_folder_id = get_or_create_drive_folder(drive_service_colab, DRIVE_BASE_DIR_NAME)\n",
    "    if drive_base_folder_id:\n",
    "        wolf_in_folder_id_val = get_or_create_drive_folder(drive_service_colab, DRIVE_INBOX_NAME, drive_base_folder_id)\n",
    "        if wolf_in_folder_id_val:\n",
    "            wolf_processed_folder_id_val = get_or_create_drive_folder(drive_service_colab, DRIVE_PROCESSED_NAME, wolf_in_folder_id_val)\n",
    "        \n",
    "        for db_name in [\"reports.sqlite\", \"prompts.sqlite\"]:\n",
    "            colab_db_path = os.path.join(COLAB_LOCAL_DATA_PATH, db_name)\n",
    "            query = f\"name='{db_name}' and '{drive_base_folder_id}' in parents and trashed=false\"\n",
    "            try:\n",
    "                response = drive_service_colab.files().list(q=query, fields='files(id, name)').execute()\n",
    "                drive_files = response.get('files', [])\n",
    "                if drive_files:\n",
    "                    drive_file_id = drive_files[0]['id']\n",
    "                    print(f\"在 Drive 中找到資料庫檔案 '{db_name}' (ID: {drive_file_id})，正在下載到 {colab_db_path}...\")\n",
    "                    request = drive_service_colab.files().get_media(fileId=drive_file_id)\n",
    "                    fh = io.BytesIO()\n",
    "                    downloader = io.BufferedReader(fh)\n",
    "                    # This part needs googleapiclient.http.MediaIoBaseDownload\n",
    "                    # For simplicity, let's use a direct write if get_media provides bytes directly or similar helper.\n",
    "                    # The Google example uses MediaIoBaseDownload with fh, then fh.seek(0) and shutil.copyfileobj(fh, open(colab_db_path, 'wb'))\n",
    "                    # Simpler for now:\n",
    "                    db_content = request.execute()\n",
    "                    with open(colab_db_path, 'wb') as f:\n",
    "                        f.write(db_content)\n",
    "                    print(f"資料庫檔案 '{db_name}' 下載完成。")\n",
    "                else:\n",
    "                    print(f\"在 Drive 的 '{DRIVE_BASE_DIR_NAME}' 資料夾中未找到資料庫檔案 '{db_name}'。應用程式將在本地創建。\")\n",
    "            except Exception as error:\n",
    "                print(f"搜尋/下載 Drive 中的資料庫檔案 '{db_name}' 時發生錯誤: {error}\")\n",
    "else:\n",
    "    print(\"Drive API 服務未成功初始化，無法自動創建 Drive 資料夾或下載資料庫。請手動確保它們存在並配置相關 Secret。\")\n",
    "\n",
    "print(\"\\n--- Google Drive 資料夾和資料庫準備完成 ---\")\n",
    "if wolf_in_folder_id_val:\n",
    "    print(f\"WOLF_IN_FOLDER_ID: {wolf_in_folder_id_val}  <-- 請將此 ID 設定到 Colab Secrets 中!\")\n",
    "if wolf_processed_folder_id_val:\n",
    "    print(f"WOLF_PROCESSED_FOLDER_ID: {wolf_processed_folder_id_val}  <-- 請將此 ID 設定到 Colab Secrets 中!")\n",
    "if not wolf_in_folder_id_val or not wolf_processed_folder_id_val:\n",
    "    print(\"警告：未能自動獲取 WOLF_IN_FOLDER_ID 或 WOLF_PROCESSED_FOLDER_ID。請手動在 Drive 創建這些資料夾並將其 ID 設定到 Colab Secrets。\")"
