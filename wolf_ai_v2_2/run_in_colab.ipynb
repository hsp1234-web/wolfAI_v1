    "    PROJECT_DIR_NAME = \"wolf_ai_v2_2\"\n",
    "    FULL_PROJECT_PATH = os.path.join(PROJECT_PARENT_DIR, PROJECT_DIR_NAME)\n",
    "    if not os.path.isdir(FULL_PROJECT_PATH):\n",
    "        print(f\"錯誤: 專案路徑 {FULL_PROJECT_PATH} 不存在。請先成功執行第二步 (複製專案)。\")\n",
    "        # exit() # In a notebook, don't exit, just stop cell execution implicitly\n",
    "        raise SystemExit(\"專案路徑不存在，無法繼續。\")\n",
    "\n",
    "COLAB_LOCAL_DATA_PATH = os.path.join(FULL_PROJECT_PATH, 'data') # 本地資料庫快取路徑\n",
    "BACKEND_LOG = os.path.join(FULL_PROJECT_PATH, 'backend.log')\n",
    "FRONTEND_LOG = os.path.join(FULL_PROJECT_PATH, 'frontend.log')\n",
