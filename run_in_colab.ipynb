    "#@title wolfAI_v1 Êô∫ÊÖßÂûãÂïüÂãïÂô® (v2.0)\n",
    "#@markdown ---\n",
    "#@markdown ### **Ê≠•È©ü 1: Ë´ãÈÅ∏ÊìáÂü∑Ë°åÈÅ∏È†Ö**\n",
    "#@markdown Ë´ãÂÆåÊàê‰ª•‰∏ãË®≠ÂÆöÔºåÁÑ∂ÂæåÈªûÊìäÂ∑¶ÂÅ¥ÁöÑ ‚ñ∂Ô∏è **Âü∑Ë°åÊåâÈàï**‰æÜÂïüÂãïÁ®ãÂºè„ÄÇ\n",
    "#@markdown \n",
    "#@markdown **Âü∑Ë°åÊ®°Âºè**:\n",
    "#@markdown - `Ê≠£Â∏∏`: ÁÇ∫‰∏ÄËà¨‰ΩøÁî®ËÄÖË®≠Ë®àÔºåÊèê‰æõÊúÄÁ©©ÂÆö„ÄÅÁ∞°ÊΩîÁöÑÂïüÂãïÊµÅÁ®ã„ÄÇ\n",
    "#@markdown - `Èô§ÈåØ`: ÁÇ∫ÈñãÁôºËÄÖË®≠Ë®àÔºåÂ∞áËº∏Âá∫Ë©≥Á¥∞Êó•Ë™å‰∏¶Âü∑Ë°å‰∏ÄÁ≥ªÂàóËá™ÂãïÂåñÁ≥ªÁµ±ÂÅ•Â∫∑Ê™¢Êü•„ÄÇ\n",
    "execution_mode = \"\u6B63\u5E38\" #@param [\"\u6B63\u5E38\", \"\u9664\u932F\"]\n",
    "#@markdown \n",
    "#@markdown ---\n",
    "#@markdown ### **Ê≠•È©ü 2: (ÂèØÈÅ∏) ÊéõËºâ Google Drive**\n",
    "#@markdown **ÊòØÂê¶ÊéõËºâÈõ≤Á´ØÁ°¨Á¢ü**:\n",
    "#@markdown - `Âê¶`: Ê®ôÊ∫ñÊ®°ÂºèÔºåÁ®ãÂºèÂ∞áÂú®Ëá®ÊôÇÁí∞Â¢É‰∏≠ÈÅãË°åÔºåÈóúÈñâÂæåË≥áÊñô‰∏çÊúÉ‰øùÁïô„ÄÇ\n",
    "#@markdown - `ÊòØ`: Â¶ÇÊûúÊÇ®ÈúÄË¶ÅËÆÄÂèñÊàñÊ∞∏‰πÖ‰øùÂ≠òË≥áÊñôÂà∞ÊÇ®ÁöÑ Google DriveÔºåË´ãÈÅ∏ÊìáÊ≠§È†Ö„ÄÇ\n",
    "mount_drive_option = \"\u5426\" #@param [\"\u662F\", \"\u5426\"]\n",
    "#@markdown ---\n",
    "\n",
    "# --- Ê®°ÁµÑÂ∞éÂÖ• ---\n",
    "import os\n",
    "import subprocess\n",
    "import logging\n",
    "from datetime import datetime\n",
    "\n",
    "# --- Â∏∏Êï∏Ë®≠ÂÆö ---\n",
    "REPO_URL = \"https://github.com/hsp1234-web/wolfAI_v1.git\"\n",
    "REPO_PATH = \"/content/wolfAI_v1\"\n",
    "LOG_DIR = \"/content/logs\"\n",
    "BRANCH = \"main\" # Âõ∫ÂÆö‰ΩøÁî® main ÂàÜÊîØ\n",
    "\n",
    "def setup_logging():\n",
    "    \"\"\"Ë®≠ÂÆöÊó•Ë™åË®òÈåÑÂô®ÔºåÊ†πÊìöÂü∑Ë°åÊ®°ÂºèÊ±∫ÂÆöÊó•Ë™åÁ¥öÂà•\"\"\"\n",
    "    os.makedirs(LOG_DIR, exist_ok=True)\n",
    "    log_filename = os.path.join(LOG_DIR, f\"wolfai_run_{datetime.now().strftime('%Y%m%d_%H%M%S')}.log\")\n",
    "    \n",
    "    log_level = logging.DEBUG if execution_mode == '\u9664\u932F' else logging.INFO\n",
    "    \n",
    "    logging.basicConfig(\n",
    "        level=log_level,\n",
    "        format='%(asctime)s - %(levelname)s - %(message)s',\n",
    "        handlers=[\n",
    "            logging.FileHandler(log_filename),\n",
    "            logging.StreamHandler()\n",
    "        ]\n",
    "    )\n",
    "    logging.info(f\"Êó•Ë™åÁ¥öÂà•Ë®≠ÂÆöÁÇ∫: {'DEBUG' if log_level == logging.DEBUG else 'INFO'}\")\n",
    "    logging.info(f\"Êó•Ë™åÊ™îÊ°àÂ∞áÂÑ≤Â≠òÊñº: {log_filename}\")\n",
    "\n",
    "def run_command(command, cwd=None):\n",
    "    \"\"\"ÂÆâÂÖ®Âú∞Âü∑Ë°å Shell ÂëΩ‰ª§‰∏¶‰∏≤ÊµÅËº∏Âá∫Êó•Ë™å\"\"\"\n",
    "    logging.info(f\"Âü∑Ë°åÂëΩ‰ª§: `{' '.join(command)}` (Êñº {cwd or os.getcwd()})\")\n",
    "    try:\n",
    "        process = subprocess.Popen(\n",
    "            command,\n",
    "            stdout=subprocess.PIPE,\n",
    "            stderr=subprocess.STDOUT,\n",
    "            text=True,\n",
    "            encoding='utf-8',\n",
    "            cwd=cwd\n",
    "        )\n",
    "        for line in iter(process.stdout.readline, ''):\n",
    "            if line:\n",
    "                logging.info(line.strip())\n",
    "        process.stdout.close()\n",
    "        return_code = process.wait()\n",
    "        if return_code:\n",
    "            raise subprocess.CalledProcessError(return_code, command)\n",
    "        logging.info(f\"ÂëΩ‰ª§ÊàêÂäüÂÆåÊàê: `{' '.join(command)}`\")\n",
    "    except Exception as e:\n",
    "        logging.error(f\"ÂëΩ‰ª§Âü∑Ë°åÂ§±Êïó: `{' '.join(command)}`ÔºåÈåØË™§: {e}\")\n",
    "        raise\n",
    "\n",
    "def main_workflow():\n",
    "    \"\"\"Âü∑Ë°åÂÆåÊï¥ÁöÑÂ∑•‰ΩúÊµÅÁ®ã\"\"\"\n",
    "    # 1. ÊéõËºâÈõ≤Á´ØÁ°¨Á¢ü (Â¶ÇÊûú‰ΩøÁî®ËÄÖÈÅ∏Êìá)\n",
    "    if mount_drive_option == \"\u662F\":\n",
    "        try:\n",
    "            from google.colab import drive\n",
    "            logging.info(\"\u4F7F\u7528\u8005\u9078\u64C7\u639B\u8F09 Google Drive...\")\n",
    "            drive.mount('/content/drive')\n",
    "            logging.info(\"Google Drive ÊéõËºâÊàêÂäüÊñº /content/drive\")\n",
    "        except Exception as e:\n",
    "            logging.error(f\"Google Drive ÊéõËºâÂ§±Êïó: {e}\")\n",
    "            return # ÊéõËºâÂ§±ÊïóÂâáÁµÇÊ≠¢ÊµÅÁ®ã\n",
    "    else:\n",
    "        logging.info(\"\u4F7F\u7528\u8005\u9078\u64C7\u4E0D\u639B\u8F09 Google DriveÔºåË∑≥ÈÅéÊ≠§Ê≠•È©ü„ÄÇ\")\n",
    "\n",
    "    # 2. ÂÖãÈöÜÊàñÊõ¥Êñ∞Á®ãÂºèÁ¢ºÂÄâÂ∫´\n",
    "    logging.info(\"--- Ê≠£Âú®Ê∫ñÂÇôÁ®ãÂºèÁ¢ºÂÄâÂ∫´ ---\")\n",
    "    try:\n",
    "        if not os.path.exists(REPO_PATH):\n",
    "            run_command(['git', 'clone', '--branch', BRANCH, REPO_URL, REPO_PATH])\n",
    "        else:\n",
    "            logging.info(\"\u5009\u5EAB\u5DF2\u5B58\u5728ÔºåÊ≠£Âú®Êõ¥Êñ∞...\")\n",
    "            run_command(['git', 'fetch', '--all'], cwd=REPO_PATH)\n",
    "            run_command(['git', 'reset', '--hard', f'origin/{BRANCH}'], cwd=REPO_PATH)\n",
    "            run_command(['git', 'pull'], cwd=REPO_PATH)\n",
    "        logging.info(\"\u7A0B\u5F0F\u78BC\u5009\u5EAB\u6E96\u5099\u5B8C\u6210„ÄÇ\")\n",
    "    except Exception as e:\n",
    "        logging.critical(\"\u6E96\u5099\u7A0B\u5F0F\u78BC\u5009\u5EAB\u6642\u767C\u751F\u56B4\u91CD\u932F\u8AA4ÔºåÊµÅÁ®ã‰∏≠Ê≠¢„ÄÇ\")\n",
    "        return\n",
    "\n",
    "    # 3. ÂÆâË£ù‰æùË≥¥Â•ó‰ª∂\n",
    "    logging.info(\"--- Ê≠£Âú®ÂÆâË£ù‰æùË≥¥Â•ó‰ª∂ ---\")\n",
    "    try:\n",
    "        requirements_path = os.path.join(REPO_PATH, 'backend', 'requirements.txt')\n",
    "        if os.path.exists(requirements_path):\n",
    "            run_command(['pip', 'install', '-r', requirements_path])\n",
    "            logging.info(\"\u4F9D\u8CF4\u5957\u4EF6\u5B8C\u6210„ÄÇ\")\n",
    "        else:\n",
    "            raise FileNotFoundError(\"\u627E\u4E0D\u5230 requirements.txt \u6A94\u6848ÔºÅ\")\n",
    "    except Exception as e:\n",
    "        logging.critical(\"\u5B89\u88DD\u4F9D\u8CF4\u6642\u767C\u751F\u56B4\u91CD\u932F\u8AA4ÔºåÊµÅÁ®ã‰∏≠Ê≠¢„ÄÇ\")\n",
    "        return\n",
    "\n",
    "    # 4. Âü∑Ë°åÁ≥ªÁµ±ÂÅ•Â∫∑Ê™¢Êü• (ÂÉÖÂú®Èô§ÈåØÊ®°Âºè)\n",
    "    if execution_mode == \"\u9664\u932F\":\n",
    "        logging.info(\"--- [\u9664\u932F\u6A21\u5F0F] \u57F7\u884C\u7CFB\u7D71\u5065\u5EB7\u6AA2\u67E5 ---\")\n",
    "        try:\n",
    "            backend_path = os.path.join(REPO_PATH, 'backend')\n",
    "            run_command(['pip', 'install', 'pytest'])\n",
    "            run_command(['pytest'], cwd=backend_path)\n",
    "            logging.info(\"\u7CFB\u7D71\u5065\u5EB7\u6AA2\u67E5\u5B8C\u6210„ÄÇ\")\n",
    "        except Exception as e:\n",
    "            logging.warning(f\"\u7CFB\u7D71\u5065\u5EB7\u6AA2\u67E5\u51FA\u73FE\u554F\u984C: {e}\") # Ê∏¨Ë©¶Â§±Êïó‰∏çÊáâ‰∏≠Ê≠¢‰∏ªÊµÅÁ®ã\n",
    "    \n",
    "    # 5. ÂïüÂãïÊúçÂãô\n",
    "    logging.info(\"--- Ê≠£Âú®ÂïüÂãïÊáâÁî®Á®ãÂºèÊúçÂãô ---\")\n",
    "    try:\n",
    "        start_script_path = os.path.join(REPO_PATH, 'scripts', 'start.sh')\n",
    "        if os.path.exists(start_script_path):\n",
    "            run_command(['chmod', '+x', start_script_path])\n",
    "            logging.info(\"\u6B63\u5728\u80CC\u666F\u555F\u52D5\u670D\u52D9\uFF0C\u8ACB\u67E5\u770B\u65E5\u8A8C\u4EE5\u7372\u53D6\u8A73\u7D30\u8CC7\u8A0A\u3002\")\n",
    "            \n",
    "            env = os.environ.copy()\n",
    "            env['OPERATION_MODE'] = execution_mode.upper()\n",
    "            \n",
    "            log_file = os.path.join(LOG_DIR, \"services.log\")\n",
    "            cmd = f\"nohup {start_script_path} > {log_file} 2>&1 &\"\n",
    "            subprocess.Popen(cmd, shell=True, env=env, cwd=REPO_PATH)\n",
    "            \n",
    "            logging.info(f\"\u670D\u52D9\u5DF2\u5728\u80CC\u666F\u555F\u52D5\u3002\u60A8\u53EF\u4EE5\u900F\u904E\u4EE5\u4E0B\u547D\u4EE4\u67E5\u770B\u5373\u6642\u65E5\u8A8CÔºö\\\\n!tail -f {log_file}\")\n",
    "            print(f\"\\n‚úÖ \u7CFB\u7D71\u555F\u52D5\u6307\u4EE4\u5DF2\u767C\u9001\uFF01\u8ACB\u7A0D\u5F85\u5E7E\u5206\u9418\u8B93\u670D\u52D9\u5B8C\u5168\u4E0A\u7DDA\u3002\")\n",
    "            print(f\"üëâ \u60A8\u53EF\u4EE5\u4F7F\u7528 `!tail -f {log_file}` \u4F86\u8FFD\u8E64\u670D\u52D9\u555F\u52D5\u9032\u5EA6\u3002\")\n",
    "\n",
    "        else:\n",
    "            raise FileNotFoundError(\"\u627E\u4E0D\u5230 start.sh \u5ÂïüÂãïËÖ≥Êú¨ÔºÅ\")\n",
    "    except Exception as e:\n",
    "        logging.critical(f\"\u555F\u52D5\u670D\u52D9\u6642\u767C\u751F\u56B4\u91CD\u932F\u8AA4: {e}\")\n",
    "        return\n",
    "\n",
    "# --- Âü∑Ë°å‰∏ªÊµÅÁ®ã ---\n",
    "if __name__ == \"__main__\":\n",
    "    setup_logging()\n",
    "    logging.info(f\"=== WolfAI v2.0 \u667A\u6167\u578B\u555F\u52D5\u5668\u958B\u59CB\u57F7\u884C ===\")\n",
    "    logging.info(f\"\u9078\u64C7\u6A21\u5F0F: {execution_mode}, \u662F\u5426\u639B\u8F09Drive: {mount_drive_option}\")\n",
    "    try:\n",
    "        main_workflow()\n",
    "        logging.info(\"=== \u667A\u6167\u578B\u555F\u52D5\u5668\uÊµÅÁ®ã\u57F7\u884C\u5B8C\u7562 ===\")\n",
    "    except Exception as e:\n",
    "        logging.critical(f\"\u4E3B\uÊµÅÁ®ã\u906D\u9047\u672A\u8655\u7406\u7684\u4F8B\u5916\u72C0\u6CC1: {e}\")\n",
    "        logging.info(\"=== \u667A\u6167\u578B\u555F\u52D5\u5668\u56E0\u932F\u8AA4\u800C\u4E2D\u6B62 ===\")\n"
